<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7e7e7"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView13"
                android:src="@drawable/item_black_black"
                android:layout_centerInParent="true"
                android:layout_margin="4dp" />

            <ImageView
                android:id="@+id/Shop_listview_weapon_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/smithy_up_icon"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView11"
                android:src="@drawable/item_back"
                android:layout_centerInParent="true"
                android:layout_margin="3dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/Shop_listview_weapon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="대장간 Lv. 1" />

            <TextView
                android:id="@+id/Shop_listview_weapon_SellM"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="판매 금액 : " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:layout_weight="2"
            android:background="#ffffcc5f"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/Shop_listview_upgrade">

            <TextView
                android:id="@+id/Shop_listview_weapon_made"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="대장간 강화"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/Shop_listview_weapon_madeM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1000 Gold"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Shop_listview_weapon_LVcut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:gravity="center_vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/item_lock"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/Shop_listview_weapon_LVcutT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="대장간 레벨 ### 때 부터 제작이 가능합니다"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

    </RelativeLayout>
</RelativeLayout>
