<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Touch_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5" >

        <TextView
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text="남은 시간"
            android:textColor="#ffffffff" />

        <TextView
            android:textSize="10dp"
            android:gravity="center"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="내구도"
            android:textColor="#ffffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:id="@+id/PlayTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:text="60"
            android:textColor="#ffffffff" />

        <TextView
            android:gravity="center"
            android:id="@+id/PlayItemHP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="60"
            android:textColor="#ffffffff" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/imageView8"
        android:src="@drawable/missioninfo_stateline" />

    <TextView
        android:id="@+id/PlayItemName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/itemname_back"
        android:gravity="center"
        android:text="아이템 이름"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/play_anvil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/anvil_bg" />

            <ImageView
                android:id="@+id/play_weapon"
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:rotation="-45"
                android:src="@drawable/weapon_icon_0" />

            <ImageView
                android:id="@+id/play_hit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="5" >

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
